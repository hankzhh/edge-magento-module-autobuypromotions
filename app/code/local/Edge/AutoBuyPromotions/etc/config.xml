<?xml version="1.0" encoding="UTF-8"?>
<config>
    <modules>
        <Edge_AutoBuyPromotions>
            <version>1.0.1</version>
        </Edge_AutoBuyPromotions>
    </modules>
    <global>
        <blocks>
            <autobuypromotions>
                <class>Edge_AutoBuyPromotions_Block</class>
            </autobuypromotions>
            <adminhtml>
                <rewrite>
                    <promo_quote_grid>Edge_AutoBuyPromotions_Block_Adminhtml_Promo_Quote_Grid</promo_quote_grid>
                    <promo_quote_edit>Edge_AutoBuyPromotions_Block_Adminhtml_Promo_Quote_Edit</promo_quote_edit>
                </rewrite>
            </adminhtml>
        </blocks>
        <helpers>
            <autobuypromotions>
                <class>Edge_AutoBuyPromotions_Helper</class>
            </autobuypromotions>
        </helpers>
        <models>
            <autobuypromotions>
                <class>Edge_AutoBuyPromotions_Model</class>
                <resourceModel>autobuypromotions_resource</resourceModel>
            </autobuypromotions>
            <autobuypromotions_resource>
                <class>Edge_AutoBuyPromotions_Model_Resource</class>
                <entities>
                    <autobuypromotions>
                        <table>autobuypromotions</table>
                    </autobuypromotions>
                </entities>
            </autobuypromotions_resource>
            <salesrule_resource>
                <rewrite>
                    <rule>Edge_AutoBuyPromotions_Model_Resource_Rule</rule>
                    <rule_collection>Edge_AutoBuyPromotions_Model_Resource_Rule_Collection</rule_collection>
                </rewrite>
            </salesrule_resource>
        </models>
        <resources>
            <autobuypromotions_setup>
                <setup>
                    <module>Edge_AutoBuyPromotions</module>
                </setup>
                <connection>
                    <use>core_setup</use>
                </connection>
            </autobuypromotions_setup>
        </resources>
        <events>
            <checkout_cart_add_product_complete>
                <observers>
                    <autobuypromotions_quote_item>
                        <type>singleton</type>
                        <class>Edge_AutoBuyPromotions_Model_Observer_Product</class>
                        <method>autoBuyPromotions</method>
                    </autobuypromotions_quote_item>
                </observers>
            </checkout_cart_add_product_complete>
        </events>
    </global>
    <admin>
        <routers>
            <adminhtml>
                <args>
                    <modules>
                        <autobuypromotions before="Mage_Adminhtml">Edge_AutoBuyPromotions_Adminhtml</autobuypromotions>
                    </modules>
                </args>
            </adminhtml>
        </routers>
    </admin>
    <adminhtml>
        <events>
            <adminhtml_promo_quote_edit_tab_main_prepare_form>
                <observers>
                    <autobuypromotions_salesrule_form>
                        <class>autobuypromotions/adminhtml_observer</class>
                        <method>addFieldToForm</method>
                    </autobuypromotions_salesrule_form>
                </observers>
            </adminhtml_promo_quote_edit_tab_main_prepare_form>
            <adminhtml_controller_salesrule_prepare_save>
                <observers>
                    <autobuypromotions_salesrule_prepare_save>
                        <class>autobuypromotions/adminhtml_observer</class>
                        <method>addProductIdsToRequest</method>
                    </autobuypromotions_salesrule_prepare_save>
                </observers>
            </adminhtml_controller_salesrule_prepare_save>
        </events>
        <layout>
            <updates>
                <autobuypromotions>
                    <file>edge/autobuypromotions.xml</file>
                </autobuypromotions>
            </updates>
        </layout>
    </adminhtml>
</config>