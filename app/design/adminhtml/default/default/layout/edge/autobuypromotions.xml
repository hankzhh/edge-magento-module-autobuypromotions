                    <grid_block_name>autobuypromotions.edit.tab.products</grid_block_name>
                    <data_callback>getSelectedAutoBuyPromotionsProducts</data_callback>
                    <hidden_input_name>auto_buy_promotions_product_ids</hidden_input_name>
